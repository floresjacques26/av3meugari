<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <fragment
        android:id="@+id/fMaps"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:visibility="visible" />

    <ListView
        android:id="@+id/lvBookmarks"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="12dp"
        android:divider="@color/transparent"
        android:dividerHeight="10.0sp"
        tools:listitem="@layout/activity_home_listitem_bookmarks"
        android:background="@color/gray70" />

    <ListView
        android:id="@+id/lvLayers"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:padding="12dp"
        android:divider="@color/transparent"
        android:dividerHeight="10.0sp"
        tools:listitem="@layout/activity_home_listitem_layers"
        android:background="@color/blue30" />

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/frOptions"
        android:tag="frOptions"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:name="com.coding.meugari.OptionsFragment"
        android:background="@color/lightGray"/>

    <!--fabCompass-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabCompass"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="205dp"
        android:outlineAmbientShadowColor="@color/lightGray"
        android:outlineSpotShadowColor="@color/lightGray"
        android:src="@drawable/baseline_compass_regular"
        app:backgroundTint="@color/lightGray"
        app:fabCustomSize="32dp"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@color/mapFab" />

    <!--fabBookmark-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSearch"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="105dp"
        android:outlineAmbientShadowColor="@color/lightGray"
        android:outlineSpotShadowColor="@color/lightGray"
        android:src="@drawable/baseline_search_24"
        app:backgroundTint="@color/lightGray"
        app:fabCustomSize="32dp"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@color/mapFab" />

    <!--fabBookmark-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabBookmark"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="155dp"
        android:outlineAmbientShadowColor="@color/lightGray"
        android:outlineSpotShadowColor="@color/lightGray"
        android:src="@drawable/baseline_bookmark_add_24"
        app:backgroundTint="@color/lightGray"
        app:fabCustomSize="32dp"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@color/mapFab" />

    <!--fabLocation-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLocation"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:layout_above="@+id/bottomNavigation"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:layout_marginStart="7dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="55dp"
        android:outlineAmbientShadowColor="@color/lightGray"
        android:outlineSpotShadowColor="@color/lightGray"
        android:src="@drawable/baseline_near_me_24px"
        app:backgroundTint="@color/lightGray"
        app:fabCustomSize="32dp"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@color/mapFab" />

    <!--fabLayerMap-->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabLayerMap"
        android:layout_above="@+id/bottomNavigation"
        android:layout_width="40dp"
        android:layout_height="32dp"
        android:src="@drawable/baseline_layers_24"
        app:backgroundTint="@color/lightGray"
        android:outlineAmbientShadowColor="@color/lightGray"
        android:outlineSpotShadowColor="@color/lightGray"
        app:fabCustomSize="32dp"
        app:fabSize="mini"
        app:maxImageSize="24dp"
        app:tint="@color/mapFab"

        android:layout_alignParentEnd="true"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        />


    <!--bottomNavigation-->
    <com.qamar.curvedbottomnaviagtion.CurvedBottomNavigation
        android:id="@+id/bottomNavigation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:cbn_height="76dp"
        app:cbn_icon_size="24dp"
        app:cbn_curve_radius="26dp"
        app:cbn_selected_icon_size="48dp"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:cbn_fabColor="@color/darkGray"
        app:cbn_background="@color/darkGray"
        app:cbn_iconColor="@color/white"
        app:cbn_selectedIconColor="@color/white"
        app:cbn_titleColor="@color/white"

        />

</RelativeLayout>